{
  "name": "sevak",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "firebase": "^4.1.3",
    "jquery": "^3.2.1",
    "lodash": "^4.17.4",
    "material-ui": "^0.18.6",
    "node-sass-chokidar": "^0.0.3",
    "npm-run-all": "^4.0.2",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-autosuggest": "^9.3.2",
    "react-cropperjs": "^1.2.5",
    "react-dom": "^15.4.2",
    "react-dropzone": "^3.12.2",
    "react-progressbar": "^15.4.1",
    "react-radio-group": "^3.0.2",
    "react-router": "^3.0.0",
    "react-router-dom": "^4.1.2",
    "react-scripts": "1.0.10",
    "react-select": "^1.0.0-rc.3",
    "react-sortable-hoc": "^0.6.7",
    "react-spinners": "0.0.30",
    "react-table": "^6.0.1",
    "react-tag-input": "^4.7.2",
    "react-tap-event-plugin": "^2.0.1",
    "react-cropperjs":"^1.2.5",
    "whatwg-fetch": "^2.0.3"
  },
  "scripts": {
    "build-css": "node-sass-chokidar src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar src/ -o src/ --watch --recursive",
    "start-js": "react-scripts start",
    "start": "npm-run-all -p fb:switch:stage watch-css start-js",
    "build": "npm run build-css && react-scripts build",
    "build:prod": "yarn build && rm build/static/css/*.map build/static/js/*.map",
    "fb:switch:prod": "cp src/config/firebase-prod.json src/config/firebase.json",
    "fb:switch:stage": "cp src/config/firebase-stage.json src/config/firebase.json",
    "deploy": "yarn deploy:stage",
    "deploy:prod": "yarn fb:switch:prod && export REACT_APP_API_ENV=production && yarn build:prod && firebase deploy -P default && yarn fb:switch:stage",
    "deploy:stage": "yarn fb:switch:stage && yarn build && firebase deploy -P staging",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject"
  },
  "devDependencies": {
    "css-loader": "^0.28.7",
    "style-loader": "^0.19.0"
  }
}
